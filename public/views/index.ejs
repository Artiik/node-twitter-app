<!doctype html>
<html lang="en">
<head>
   <% include ./partials/head.ejs %>
</head>
<body>
    <header>
        <% include ./partials/header.ejs %>
    </header>
    <div class="container">
        <div class="jumbotron text-center">
            <h3>
                Enter a Search Term <small>(then hit enter)</small>
            </h3>
            <form action="/results" style="margin-top: 25px;">
                <input type="text" name="q" placeholder="Search..." required class="form-control input-lg">
            </form>
        </div>

        <% if (searches.length > 0) { %>
            <h3>Latest Searches</h3>
        <% } %>

        <% searches.forEach(function (query, index) { %>
        <div class="col-sm-6 panel">
            <a href="/results?q=<%= query.term %>" class="btn btn-block btn-default btn-lg">
                <%= query.term %>
            </a>
        </div>

        <% }); %>

    </div>
    <footer>
        <% include ./partials/footer.ejs %>
    </footer>
</body>
</html>